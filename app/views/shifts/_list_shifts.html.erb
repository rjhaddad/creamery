<div id="list_shifts">
	<br/>
	<h2>Today's Shifts</h2>
	<br/>
	<div>
		<div class = "small-12 small-offset-3 columns">
								<% if @today_shifts.empty? %>
  <p><em>There are no shifts for today.</em></p>
<% else %>
			<table class="table table-striped">
				<thead>
					<tr>
						<th>Employee</th>
						<th>Start time</th>
						<th>&nbsp;</th>
						<th>&nbsp;</th>
						<th>&nbsp;</th>
					</tr>
				</thead>
				<tbody>
					<% @today_shifts.each do |shift| %>
					<tr>
						<td><%= link_to shift.assignment.employee.name, employee_path(shift.assignment.employee) %></td>
						<td><%= shift.start_time.strftime("%I:%M %p") %></td>
						<td>
							<div id = "add-button">
								<%= link_to(shift_path(shift), class: 'button tiny radius warning') do %>
								&nbsp;Add Jobs&nbsp;
								<% end %>
							</div>
						</td>
						<td>
							<%= link_to(image_tag("edit.png"), edit_shift_path(shift)) %>
						</td>
						<td>
							<%= link_to(image_tag("delete.png"), shift_path(shift), method: 'delete', data: {confirm: "Are you sure you want to permanently delete this shift?"}) %>
						</td>
					</tr>
					<% end %>
				</tbody>
			</table>
<%end%>
			<br/>
			<div class="form-actions">
				<div id = "add-button">
					<%= link_to(new_shift_path(store_id: params[:store_id]), id: 'new_shift_link', class: 'button tiny radius', remote:true) do %>
					&nbsp;Add Shift
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>