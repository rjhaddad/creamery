<div class= "inner">
<div class="image-holder">
	<%= link_to image_tag('user.png', class:"img2") %>
</div>
				

<%= form_with(model: @user, local: true) do |f| %>

 <legend><%= controller.action_name.capitalize %> User</legend>
 
  <div class="form-wrapper">		     
        <%= f.label :name %>
        <%= f.text_field :employee_id, :collection => Employee.active.alphabetical, :class => "form-control" %>
</div>

  <div class="form-wrapper">
              <%= f.label :email %>
        <%= f.text_field :email, :label => "Email Address", :class => "form-control" %>
</div>
     
  <div class="form-wrapper">
              <%= f.label :password %>
        <%= f.text_field :password, :label => "Password", :class => "form-control" %>
</div>
        
  <div class="form-wrapper">
              <%= f.label :password_confirmation %>
        <%= f.text_field :password_confirmation, :label => "Password Confirmation", :class => "form-control" %>
</div>
        
        
        <div class="form-actions">
          <%= f.submit nil, :class => 'btn btn-primary' %>
          <%= link_to 'Cancel',users_path, :class => 'btn' %>
        </div>


<% end %>
</div>