<h2 class = "titles">Users</h2>

<table class="table table-hover table-sm">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Role</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.employee.name, user_path(user) %></td>
        <td><%= mail_to user.email, user.email %></td>
        <td><%= user.employee.role.capitalize %></td>
        <td>
          <%= link_to "Remove", user_path(user), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

