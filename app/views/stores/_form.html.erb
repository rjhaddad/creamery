<div class="inner">
				<div class="image-holder">
						<%= link_to image_tag('store2.png', class:"img2") %>
				</div>
				
				
<%= form_with(model: store, local: true) do |form| %>
  <% if store.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(store.errors.count, "error") %> prohibited this store from being saved:</h2>

      <ul>
      <% store.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
		<div class="form-wrapper">
    <%= form.text_field :name, id: :store_name, :class => "form-control", placeholder: " Name" %>
  </div>

<div class="form-wrapper">
    <%= form.text_field :street, id: :store_street, :class => "form-control", placeholder: "Street" %>
  </div>

<div class="form-wrapper">
    <%= form.text_field :city, id: :store_city, :class => "form-control", placeholder: "City" %>
  </div>

<div class="form-wrapper">
    <%= form.text_field :state, id: :store_state, :class => "form-control", placeholder: "State" %>
  </div>

<div class="form-wrapper">
    <%= form.text_field :zip, id: :store_zip, :class => "form-control", placeholder: "Zip" %>
  </div>

<div class="form-wrapper">
    <%= form.text_field :phone, id: :store_phone, :class => "form-control", placeholder: "Phone" %>
  </div>

<div class="form-wrapper">
    <%= form.text_field :latitude, id: :store_latitude, :class => "form-control", placeholder: "Latitude" %>
  </div>

<div class="form-wrapper">
    <%= form.text_field :longitude, id: :store_longitude, :class => "form-control", placeholder: "Longitude" %>
  </div>

<div class="form-wrapper">
  <%= form.label :active? %>
    <%= form.check_box :active, id: :store_active %>
  </div>


    
    <button><%= form.submit %>

					</button>
				</form>

<% end %>
</div>



