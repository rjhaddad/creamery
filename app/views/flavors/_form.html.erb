<%= simple_form_for @flavor, html: { class: 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Flavor</legend>

    <%= f.input :name, input_html: {class: "avg"} %>
    <%= f.input :active %>

    <div class="form-actions">
      <%= f.submit nil, :class => 'button radius' %>
      <%= link_to 'Cancel', flavors_path, :class => 'button alert radius' %>
    </div>
  </fieldset>
<% end %>