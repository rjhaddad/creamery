<br/>
<h2>Past Shifts</h2>	
<br/>
	<div class="row">

	<div class="small-4 columns">
		<h4>INCOMPLETE SHIFTS</h4>
	</div>

	 <div class="small-8 columns">
		
		<table class="table table-striped">
		    <thead>
		      <tr>
		        <th>Employee</th>
		        <th>Date</th>
		        <th>Start time</th>
		        <th>&nbsp;</th>
		        <th>&nbsp;</th>
		        <th>&nbsp;</th>
		      </tr>
		    </thead>
		    <tbody>
		      <% @past_shifts_i.each do |shift| %>
		        <tr>
		          <td><%= link_to shift.assignment.employee.name, employee_path(shift.assignment.employee) %></td>
		          <td><%= shift.date %></td>
		          <td><%= shift.start_time.strftime("%I:%M %p") %></td>
		          <td>
		            <div id = "add-button">
			            <%= link_to(shift_path(shift), class: 'button tiny radius warning') do %>
			              &nbsp;Add Jobs&nbsp;
			            <% end %>
			          </div>
          		  </td>
		          <td>
		            <%= link_to(image_tag("edit.gif"), edit_shift_path(shift)) %>
          		  </td>
          		   <td>
          		   	<%= link_to(image_tag("trash.gif"), shift_path(shift), method: 'delete', data: {confirm: "Are you sure you want to permanently delete this shift?"}) %>
				
          		  </td>
		        </tr>
		      <% end %>
		    </tbody>
	  </table>
	  <%= will_paginate @past_shifts_i, previous_label: "Previous&nbsp;", next_label: "&nbsp;Next", param_name: "past_shifts_i" %>  
	 </div>
	 
	<p>&nbsp;</p>

	<div class="small-4 columns">
		<h4>COMPLETED SHIFTS</h4>
	</div>
	
	<div class="small-8 columns">
		<table class="table table-striped">
		    <thead>
		      <tr>
		        <th>Employee</th>
		        <th>Date</th>
		        <th>Start time</th>
		        <th>&nbsp;</th>
		        <th>&nbsp;</th>
		        <th>&nbsp;</th>
		      </tr>
		    </thead>
		    <tbody>
		      <% @past_shifts_c.each do |shift| %>
		        <tr>
		          <td><%= link_to shift.assignment.employee.name, employee_path(shift.assignment.employee) %></td>
		          <td><%= shift.date %></td>
		          <td><%= shift.start_time.strftime("%I:%M %p") %></td>
		          <td>
		           		<div id = "add-button">
				            <%= link_to(shift_path(shift), class: 'button tiny radius warning') do %>
				              &nbsp;Add Jobs&nbsp;
				            <% end %>
			          	</div>
          		  </td>
		          <td>
		            <%= link_to(image_tag("edit.gif"), edit_shift_path(shift)) %>
          		  </td>
          		   <td>
				    <%= link_to(image_tag("trash.gif"), shift_path(shift), method: 'delete', data: {confirm: "Are you sure you want to permanently delete this shift?"}) %>
          		  </td>
		        </tr>
		      <% end %>
		    </tbody>
	  </table>
	  <%= will_paginate @past_shifts_c, previous_label: "Previous&nbsp;", next_label: "&nbsp;Next", param_name: "past_shifts_c" %>  
	 </div>
	</div>